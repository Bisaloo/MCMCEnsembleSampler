Package: MCMCEnsembleSampler
Title: Ensemble Sampler for Affine-Invariant MCMC
Version: 2.0
Authors@R: c(
    person("Hugo", "Gruson", role = c("cre", "aut", "cph"),
    email = "hugo.gruson+R@normalesup.org",
    comment = c(ORCID = "0000-0002-4094-1476")),
    person("Sanda", "Dejanic", role = c("aut", "cph")),
    person("Andreas", "Scheidegger", role = c("aut", "cph"),
    comment = c(ORCID = "0000-0003-2575-2172"))
